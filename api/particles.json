{
  "particles": {
    "number": {
      "value": 80, // 粒子数量
      "density": {
        "enable": true,
        "value_area": 800 // 粒子分布密度区域
      }
    },
    "color": {
      "value": "#7ec7fd" // 粒子颜色（支持 RGB、十六进制或随机）
    },
    "shape": {
      "type": "star" // 粒子形状（circle/edge/triangle/polygon/star/image）
    },
    "opacity": {
      "value": 0.5, // 透明度
      "random": true // 是否随机透明度
    },
    "size": {
      "value": 1, // 粒子大小
      "random": true // 是否随机大小
    },
    "line_linked": {
      "enable": false, // 是否启用粒子间连线
      "distance": 0, // 连线最大距离（超过则不连线）
      "color": "none", // 连线颜色
      "opacity": 1, // 连线透明度
      "width": 0 // 连线宽度
    },
    "move": {
      "enable": true, // 是否允许粒子移动
      "speed": 1, // 移动速度
      "direction": "none", // 移动方向（none/top/right/bottom/left/top-right/等）
      "random": true, // 是否随机移动
      "straight": false, // 是否直线移动
      "out_mode": "out", // 粒子超出画布时的行为（out/bounce）
      "attract": {
        "enable": true, // 是否启用鼠标吸引
        "rotateX": 600,
        "rotateY": 1200
      }
    }
  },
  "interactivity": {
    "detect_on": "canvas",
    "events": {
      "onhover": {
        "enable": true, // 鼠标悬停时是否有交互
        "mode": "bubble" // 交互模式（grab/repulse/bubble）
      },
      "onclick": {
        "enable": true, // 点击时是否有交互
        "mode": "push" // 点击时的效果（push/remove/bubble/repulse）
      },
      "resize": true // 窗口大小变化时是否重绘
    }
  },
  "retina_detect": true // 是否支持视网膜屏适配
}